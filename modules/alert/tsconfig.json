{
    "compilerOptions": {
      "outDir": "./lib",
      "lib": [
        "ESNext",
      ],
      "target": "es2017",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
    },
    "include": ["src"]
}
  